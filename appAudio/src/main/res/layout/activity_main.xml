<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/main_page_play_assets_audio"
        style="@style/MainPageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play assets audio" />

    <Button
        android:id="@+id/main_page_play_audio_file"
        style="@style/MainPageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play audio file" />

    <Button
        android:id="@+id/main_page_go_play_online"
        style="@style/MainPageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_page_go_play_online_sound" />
</LinearLayout>